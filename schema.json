[
  {
    "namespace": "HeaderColumns",
    "types": [
      {
        "id": "treeNode",
        "choices": [
          {
            "type": "object",
            "properties": {
              "nodeType": {
                "type": "string",
                "enum": [
                  "literal"
                ]
              },
              "literalString": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "nodeType": {
                "type": "string",
                "enum": [
                  "header"
                ]
              },
              "headerName": {
                "type": "string"
              },
              "headerIndex": {
                "type": "integer",
                "optional": true
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "nodeType": {
                "type": "string",
                "enum": [
                  "replace"
                ]
              },
              "target": {
                "type": "string"
              },
              "replacement": {
                "type": "string"
              },
              "replaceAll": {
                "type": "boolean"
              },
              "child": {
                "$ref": "treeNode"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "nodeType": {
                "type": "string",
                "enum": [
                  "regex"
                ]
              },
              "pattern": {
                "type": "string"
              },
              "flags": {
                "type": "string"
              },
              "replacement": {
                "type": "string"
              },
              "child": {
                "$ref": "treeNode"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "nodeType": {
                "type": "string",
                "enum": [
                  "concat"
                ]
              },
              "children": {
                "type": "array",
                "items": {
                  "$ref": "treeNode"
                },
                "minItems": 1
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "nodeType": {
                "type": "string",
                "enum": [
                  "first"
                ]
              },
              "children": {
                "type": "array",
                "items": {
                  "$ref": "treeNode"
                },
                "minItems": 1
              }
            }
          }
        ]
      },
      {
        "id": "options",
        "type": "object",
        "properties": {
          "sortNumeric": {
            "type": "boolean",
            "optional": true,
            "description": "True if the column should be sorted in numerical order."
          },
          "useDBHeaders": {
            "type": "boolean",
            "optional": true,
            "description": "True if message DB properties should be used without fetching full headers."
          }
        }
      }
    ],
    "functions": [
      {
        "name": "registerColumn",
        "type": "function",
        "description": "Registers a custom column",
        "async": false,
        "parameters": [
          {
            "name": "id",
            "type": "string",
            "description": "The ID for the column element. Must be unique."
          },
          {
            "name": "label",
            "type": "string",
            "description": "The label for the column header."
          },
          {
            "name": "tooltip",
            "type": "string",
            "description": "The on-hover tooltip for the column header."
          },
          {
            "name": "parseTree",
            "type": "object",
            "$ref": "treeNode",
            "description": "The tree defining how the column content should be created."
          },
          {
            "name": "options",
            "type": "object",
            "$ref": "options",
            "description": "An object defining options for the column."
          }
        ]
      },
      {
        "name": "unregisterColumn",
        "type": "function",
        "description": "Unregisters a custom column",
        "async": false,
        "parameters": [
          {
            "name": "id",
            "type": "string",
            "description": "The ID of the column element to unregister."
          }
        ]
      }
    ]
  }
]
